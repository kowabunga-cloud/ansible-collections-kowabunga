global:
  logLevel: {{ kowabunga_kiwi_loglevel }}
  id: {{ kowabunga_kiwi_agent_id }}
  endpoint: "wss://{{ kowabunga_fqdn }}"
  apiKey: {{ kowabunga_kiwi_agent_api_key }}
pdns:
  authoritative:
    host: {{ kowabunga_kiwi_powerdns_as_host }}
    api_port: {{ kowabunga_kiwi_powerdns_as_api_port }}
    api_key: {{ kowabunga_kiwi_powerdns_as_api_key }}
  recursors:
{% for host in groups[kowabunga_kiwi_powerdns_recursor_cluster_group_name] %}
    - host: {{ host }}
      port: {{ kowabunga_kiwi_powerdns_as_port }} # misleading, this is actually AS service port, not recursor one, but it makes things simpler
      api_port: {{ kowabunga_kiwi_powerdns_recursor_api_port }}
      api_key: {{ kowabunga_kiwi_powerdns_recursor_api_key }}

{% endfor %}
